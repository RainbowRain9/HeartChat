/* =====================
 * 双视图容器
 *
 * Material Design 3 特性：
 * - 流畅的视图切换
 * - 自然的层次感
 * - 优雅的手势交互
 * ===================== */
.dual-view-container {
  position: relative;         /* 相对定位 */
  display: flex;             /* 弹性布局 */
  width: 100%;               /* 占满宽度 */
  height: calc(100vh - 240rpx);  /* 减去顶部区域高度 */
  background: var(--md-sys-color-surface);  /* MD3 表面色 */
  overflow: hidden;          /* 隐藏溢出 */
}

/* 聊天视图 */
.chat-view {
  flex: 1;                 /* 占据剩余空间 */
  min-width: 0;           /* 防止flex子项溢出 */
  background: var(--md-sys-color-surface);  /* MD3 表面色 */
  transition: width 0.3s cubic-bezier(0.2, 0, 0, 1);  /* MD3 动画 */
  position: relative;      /* 相对定位 */
  height: 100%;           /* 占满高度 */
  overflow: hidden;       /* 隐藏溢出 */
}

/* 聊天视图收缩状态 */
.chat-view.shrink {
  box-shadow: 4rpx 0 16rpx rgba(0, 0, 0, 0.08);  /* 右侧阴影 */
}

/* 聊天容器 */
.chat-container {
  flex: 1;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

/* 情感分析视图 */
.analysis-view {
  position: relative;      /* 相对定位 */
  height: 100%;           /* 占满高度 */
  min-width: 0;           /* 防止flex子项溢出 */
  background: var(--md-sys-color-surface);  /* MD3 表面色 */
  transition: all 0.3s cubic-bezier(0.2, 0, 0, 1);  /* MD3 标准缓动 */
  overflow: hidden;       /* 隐藏溢出 */
  border-left: 1px solid var(--md-sys-color-outline-variant);  /* 左侧分隔线 */
}

/* 展开状态 */
.analysis-view.expand {
  box-shadow: -4rpx 0 16rpx rgba(0, 0, 0, 0.08);  /* 左侧阴影 */
}

