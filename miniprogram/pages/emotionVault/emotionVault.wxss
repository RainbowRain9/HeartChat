/* =================================================================
 * emotionVault.wxss - 情感仓库页面样式
 *
 * Material Design 3 设计规范：
 * - 使用动态颜色系统(Material You)
 * - 自然的层次和深度
 * - 圆润的形状设计
 * - 富有表现力的交互
 *
 * 颜色变量说明：
 * --md-sys-color-primary: 主题色
 * --md-sys-color-surface: 表面色
 * --md-sys-color-surface-variant: 表面变体色
 * --md-sys-color-on-surface: 文字色
 * --md-sys-color-outline: 轮廓色
 *
 * 阴影变量说明：
 * --md-sys-elevation-1: 轻微阴影
 * --md-sys-elevation-2: 中等阴影
 * --md-sys-elevation-3: 较重阴影
 * ================================================================= */

/* =====================
 * 基础容器样式
 *
 * Material Design 3 特性：
 * - 动态背景色适应
 * - 平滑的主题切换
 * - 响应式布局支持
 *
 * 使用示例：
 * <view class="container {{isDark ? 'dark' : ''}}">
 *   <!-- 页面内容 -->
 * </view>
 * ===================== */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100vw;
  position: fixed;
  top: 0;
  left: 0;
  overflow: hidden;
  background: var(--md-sys-color-surface);
  color: var(--md-sys-color-on-surface);
}

/* =====================
 * 用户信息区域
 *
 * Material Design 3 特性：
 * - 卡片式设计
 * - 自然的阴影效果
 * - 优雅的头像展示
 * - 清晰的信息层级
 *
 * 使用示例：
 * <view class="user-info">
 *   <image class="user-avatar" src="{{userAvatar}}" />
 *   <text class="user-name">{{userName}}</text>
 * </view>
 * ===================== */
.user-info {
  display: flex;
  /* 弹性布局，水平排列头像和名称 */
  align-items: center;
  /* 垂直居中对齐 */
  padding: 24rpx 32rpx;
  /* 内边距：上下24rpx，左右32rpx */
  background: var(--md-sys-color-surface-container);
  /* MD3 表面容器色 */
  margin: 16rpx 24rpx;
  /* 外边距 */
  border-radius: 28rpx;
  /* MD3 大圆角 */
  box-shadow: var(--md-sys-elevation-1);
  /* MD3 轻微阴影 */
  transition: all 0.2s cubic-bezier(0.2, 0, 0, 1);
  /* MD3 动画 */
}

/* 用户头像 */
.user-avatar {
  width: 88rpx;
  /* 头像宽度 */
  height: 88rpx;
  /* 头像高度 */
  border-radius: 44rpx;
  /* 圆形头像 */
  margin-right: 24rpx;
  /* 右侧间距 */
  border: 4rpx solid var(--md-sys-color-surface);
  /* MD3 边框 */
  box-shadow: var(--md-sys-elevation-1);
  /* MD3 阴影 */
  transition: transform 0.2s cubic-bezier(0.2, 0, 0, 1);
  /* 变换过渡 */
}

/* 用户名称 */
.user-name {
  font-size: 32rpx;
  /* 文字大小 */
  font-weight: 500;
  /* Medium字重 */
  color: var(--md-sys-color-on-surface);
  /* MD3 文字色 */
  transition: color 0.2s;
  /* 颜色过渡 */
}

/* 用户信息区域悬停效果 */
.user-info:active {
  background: var(--md-sys-color-surface-container-high);
  /* MD3 高层表面色 */
  transform: scale(0.98);
  /* 轻微缩小 */
}

/* 头像悬停效果 */
.user-info:active .user-avatar {
  transform: scale(1.05);
  /* 头像放大 */
}

/* =====================
 * 登录提示
 *
 * Material Design 3 特性：
 * - 醒目的提示信息
 * - 优雅的按钮设计
 * - 清晰的视觉层级
 *
 * 使用示例：
 * <view class="login-tip">
 *   <text>请先登录</text>
 *   <button class="login-btn">登录</button>
 * </view>
 * ===================== */
.login-tip {
  display: flex;
  /* 弹性布局 */
  flex-direction: column;
  /* 垂直排列 */
  align-items: center;
  /* 水平居中 */
  justify-content: center;
  /* 垂直居中 */
  padding: 48rpx 32rpx;
  /* 内边距 */
  margin: 24rpx;
  /* 外边距 */
  background: var(--md-sys-color-surface-container);
  /* MD3 表面容器色 */
  border-radius: 32rpx;
  /* MD3 大圆角 */
  box-shadow: var(--md-sys-elevation-1);
  /* MD3 阴影 */
}

/* 提示文本 */
.login-tip text {
  font-size: 28rpx;
  /* 文字大小 */
  color: var(--md-sys-color-on-surface-variant);
  /* MD3 次要文字色 */
  margin-bottom: 24rpx;
  /* 底部间距 */
}

/* 登录按钮 */
.login-btn {
  min-width: 240rpx;
  /* 最小宽度 */
  height: 88rpx;
  /* 按钮高度 */
  line-height: 88rpx;
  /* 文字行高 */
  text-align: center;
  /* 文字居中 */
  background: var(--md-sys-color-primary);
  /* MD3 主题色 */
  color: var(--md-sys-color-on-primary);
  /* MD3 文字色 */
  border-radius: 44rpx;
  /* 圆角 */
  font-size: 28rpx;
  /* 文字大小 */
  font-weight: 500;
  /* Medium字重 */
  border: none;
  /* 移除边框 */
  transition: all 0.2s cubic-bezier(0.2, 0, 0, 1);
  /* MD3 动画 */
  box-shadow: var(--md-sys-elevation-2);
  /* MD3 阴影 */
}

/* 登录按钮点击态 */
.login-btn:active {
  transform: scale(0.96);
  /* 轻微缩小 */
  background: var(--md-sys-color-primary-container);
  /* MD3 主题色容器 */
  color: var(--md-sys-color-on-primary-container);
  /* MD3 文字色 */
  box-shadow: var(--md-sys-elevation-1);
  /* 降低阴影 */
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .container {
    background: var(--md-sys-color-surface-dark);
    /* 深色背景 */
  }

  .user-info {
    background: var(--md-sys-color-surface-container-dark);
    /* 深色容器 */
  }

  .user-info:active {
    background: var(--md-sys-color-surface-container-high-dark);
    /* 深色高层容器 */
  }

  .login-tip {
    background: var(--md-sys-color-surface-container-dark);
    /* 深色容器 */
  }

  .login-btn {
    background: var(--md-sys-color-primary-dark);
    /* 深色主题色 */
    color: var(--md-sys-color-on-primary-dark);
    /* 深色文字 */
  }

  .login-btn:active {
    background: var(--md-sys-color-primary-container-dark);
    /* 深色主题容器 */
    color: var(--md-sys-color-on-primary-container-dark);
    /* 深色文字 */
  }
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .user-info {
    margin: 12rpx 16rpx;
    /* 减小外边距 */
    padding: 20rpx 24rpx;
    /* 减小内边距 */
  }

  .user-avatar {
    width: 72rpx;
    /* 减小头像尺寸 */
    height: 72rpx;
    border-radius: 36rpx;
  }

  .user-name {
    font-size: 28rpx;
    /* 减小文字大小 */
  }

  .login-btn {
    min-width: 200rpx;
    /* 减小按钮宽度 */
    height: 80rpx;
    /* 减小按钮高度 */
    line-height: 80rpx;
    font-size: 26rpx;
  }
}

@media screen and (min-width: 768px) {
  .user-info {
    max-width: 600rpx;
    /* 限制最大宽度 */
    margin: 24rpx auto;
    /* 水平居中 */
  }

  .login-tip {
    max-width: 600rpx;
    /* 限制最大宽度 */
    margin: 32rpx auto;
    /* 水平居中 */
  }
}

/* =====================
 * 角色选择器弹窗
 *
 * Material Design 3 设计规范：
 * - 使用大圆角设计
 * - 自然的阴影层次
 * - 平滑的动画过渡
 * - 支持动态主题色
 * ===================== */
.role-selector {
  position: fixed;
  /* 固定定位 */
  top: 0;
  /* 全屏覆盖 */
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(var(--md-sys-color-scrim-rgb), 0.32);
  /* MD3 遮罩颜色 */
  backdrop-filter: blur(12px);
  /* 背景模糊效果增强 */
  z-index: 1000;
  /* 保持在最上层 */
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  /* 水平居中 */
  visibility: hidden;
  /* 默认隐藏 */
  opacity: 0;
  /* 默认透明 */
  transition: all 0.3s cubic-bezier(0.2, 0, 0, 1);
  /* MD3标准缓动曲线 */
}

/* 显示状态 */
.role-selector.show {
  visibility: visible;
  opacity: 1;
}

/* 弹窗容器 */
.role-list-container {
  width: 92%;
  /* 适当增加宽度 */
  max-width: 680rpx;
  /* 最大宽度调整 */
  max-height: 85vh;
  /* 最大高度调整 */
  background: var(--md-sys-color-surface-container-high);
  /* MD3 表面容器色 */
  border-radius: 32rpx;
  /* MD3 大圆角 */
  overflow: hidden;
  /* 隐藏溢出 */
  transform: scale(0.95);
  /* 初始缩放 */
  transition: transform 0.3s cubic-bezier(0.2, 0, 0, 1);
  /* MD3动画 */
  box-shadow: var(--md-sys-elevation-3);
  /* MD3 阴影 */
}

/* 显示状态容器动画 */
.role-selector.show .role-list-container {
  transform: scale(1);
}

/* 头部样式 */
.role-header {
  padding: 24rpx 28rpx;
  /* 调整内边距 */
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中 */
  justify-content: space-between;
  /* 两端对齐 */
  border-bottom: 1px solid var(--md-sys-color-outline-variant);
  /* MD3 分隔线 */
}

/* 标题文字 */
.role-title {
  font-size: 34rpx;
  /* 更大的字号 */
  font-weight: 500;
  /* Medium字重 */
  color: var(--md-sys-color-on-surface);
  /* MD3 文字颜色 */
  margin: 0;
  /* 移除外边距 */
}

/* 头部按钮容器 */
.header-btns {
  display: flex;
  /* 弹性布局 */
  gap: 16rpx;
  /* 按钮间距 */
}

/* 关闭按钮 */
.close-btn {
  width: 48rpx;
  /* 标准触控尺寸 */
  height: 48rpx;
  padding: 0;
  /* 移除内边距 */
  background: transparent;
  /* 透明背景 */
  border: none;
  /* 移除边框 */
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  /* 水平居中 */
  border-radius: 24rpx;
  /* 圆形按钮 */
  transition: background-color 0.2s;
  /* 背景色过渡 */
}

/* 关闭按钮图标 */
.close-btn image {
  width: 32rpx;
  /* 图标尺寸 */
  height: 32rpx;
  opacity: 0.85;
  /* 不透明度 */
}

/* 关闭按钮点击态 */
.close-btn:active {
  background: var(--md-sys-color-surface-variant);
  /* MD3 状态层 */
}

/* 角色网格 */
.role-grid {
  display: flex;           /* 改为flex布局 */
  flex-direction: column;  /* 垂直排列 */
  gap: 32rpx;             /* 分类间距 */
  padding: 24rpx;         /* 内边距 */
  max-height: calc(85vh - 180rpx);  /* 最大高度 */
  overflow-y: auto;       /* 允许滚动 */
  -webkit-overflow-scrolling: touch;  /* 平滑滚动 */
}

/* 角色分类 */
.role-category {
  display: flex;          /* 弹性布局 */
  flex-direction: column; /* 垂直排列 */
  gap: 16rpx;            /* 元素间距 */
}

/* 分类标题 */
.category-title {
  font-size: 28rpx;      /* 文字大小 */
  color: var(--md-sys-color-on-surface-variant);  /* MD3 次要文字色 */
  padding: 8rpx 16rpx;   /* 内边距 */
  font-weight: 500;      /* Medium字重 */
}

/* 分类内容 */
.category-content {
  display: grid;         /* 网格布局 */
  grid-template-columns: repeat(auto-fill, minmax(160rpx, 1fr));  /* 响应式列数 */
  gap: 16rpx;           /* 网格间距 */
  padding: 0 8rpx;      /* 左右内边距 */
}

/* 单个角色项 */
.role-item {
  background: var(--md-sys-color-surface-container-low);  /* MD3 表面容器色 */
  border-radius: 24rpx;  /* 圆角 */
  padding: 20rpx 16rpx;  /* 内边距 */
  display: flex;         /* 弹性布局 */
  flex-direction: column;/* 垂直排列 */
  align-items: center;   /* 居中对齐 */
  gap: 12rpx;           /* 元素间距 */
  transition: all 0.2s cubic-bezier(0.2, 0, 0, 1);  /* MD3动画 */
  position: relative;    /* 相对定位 */
  cursor: pointer;      /* 手型光标 */
}

/* 角色项激活状态 */
.role-item.active {
  background: var(--md-sys-color-primary-container);  /* MD3 主题色容器 */
  transform: translateY(-2rpx);  /* 轻微上浮 */
  box-shadow: var(--md-sys-elevation-2);  /* MD3 阴影 */
}

/* 角色头像 */
.role-avatar {
  width: 96rpx;         /* 头像尺寸 */
  height: 96rpx;
  border-radius: 48rpx; /* 圆形 */
  border: 4rpx solid var(--md-sys-color-surface);  /* MD3 边框 */
  box-shadow: var(--md-sys-elevation-1);  /* MD3 阴影 */
  transition: transform 0.2s cubic-bezier(0.2, 0, 0, 1);  /* MD3动画 */
}

/* 激活状态头像 */
.role-item.active .role-avatar {
  transform: scale(1.05);  /* 放大效果 */
  border-color: var(--md-sys-color-primary);  /* MD3 主题色 */
}

/* 角色信息区域 */
.role-info {
  width: 100%;          /* 占满宽度 */
  text-align: center;   /* 文字居中 */
}

/* 角色名称 */
.role-name {
  font-size: 26rpx;     /* 文字大小 */
  color: var(--md-sys-color-on-surface);  /* MD3 文字颜色 */
  font-weight: 500;     /* Medium字重 */
  margin-bottom: 4rpx;  /* 底部间距 */
  transition: color 0.2s;  /* 颜色过渡 */
}

/* 角色关系标签 */
.role-relation {
  font-size: 22rpx;     /* 文字大小 */
  color: var(--md-sys-color-on-surface-variant);  /* MD3 次要文字色 */
  background: var(--md-sys-color-surface-variant);  /* MD3 表面变体色 */
  padding: 2rpx 12rpx;  /* 内边距 */
  border-radius: 10rpx; /* 圆角 */
  margin-bottom: 6rpx;  /* 底部间距 */
}

/* 使用次数标签 */
.role-usage {
  font-size: 20rpx;     /* 文字大小 */
  color: var(--md-sys-color-on-surface-variant);  /* MD3 次要文字色 */
  display: flex;        /* 弹性布局 */
  align-items: center;  /* 垂直居中 */
  gap: 4rpx;           /* 图标间距 */
}

/* 使用次数图标 */
.role-usage::before {
  content: "❤";       /* 爱心图标 */
  color: var(--md-sys-color-error);  /* MD3 错误色 */
}

/* 空状态提示 */
.empty-role-tip {
  padding: 60rpx 40rpx;
  /* 内边距 */
  text-align: center;
  /* 文字居中 */
  color: var(--md-sys-color-on-surface-variant);
  /* MD3 次要文字色 */
}

/* 创建角色按钮 */
.create-role-btn {
  margin-top: 32rpx;
  /* 顶部间距 */
  padding: 20rpx 40rpx;
  /* 内边距 */
  background: var(--md-sys-color-primary);
  /* MD3 主题色 */
  color: var(--md-sys-color-on-primary);
  /* MD3 文字色 */
  border-radius: 20rpx;
  /* 圆角 */
  font-size: 28rpx;
  /* 文字大小 */
  border: none;
  /* 移除边框 */
  transition: all 0.2s cubic-bezier(0.2, 0, 0, 1);
  /* MD3动画 */
}

/* 创建角色按钮点击态 */
.create-role-btn:active {
  transform: scale(0.98);
  /* 轻微缩小 */
  background: var(--md-sys-color-primary-variant);
  /* MD3 主题色变体 */
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .role-selector {
    background: rgba(0, 0, 0, 0.4);
    /* 深色遮罩 */
  }

  .role-list-container {
    background: var(--md-sys-color-surface-container-high-dark);
    /* MD3 深色表面 */
  }

  .role-item {
    background: var(--md-sys-color-surface-container-low-dark);
    /* MD3 深色表面 */
  }

  .role-item.active {
    background: var(--md-sys-color-primary-container-dark);
    /* MD3 深色主题容器 */
  }

  .role-relation {
    background: var(--md-sys-color-surface-variant-dark);
    /* MD3 深色表面变体 */
    color: var(--md-sys-color-on-surface-variant-dark);  /* 深色文字 */
  }

  .category-title {
    color: var(--md-sys-color-on-surface-variant-dark);  /* 深色文字 */
  }
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .role-grid {
    gap: 24rpx;        /* 减小间距 */
  }

  .category-content {
    grid-template-columns: repeat(2, 1fr);  /* 小屏两列 */
  }

  .role-avatar {
    width: 80rpx;      /* 减小头像 */
    height: 80rpx;
    border-radius: 40rpx;
  }
}

@media screen and (min-width: 768px) {
  .role-list-container {
    max-width: 880rpx;
    /* 大屏更宽 */
  }

  .role-grid {
    gap: 40rpx;        /* 增加间距 */
  }

  .category-content {
    grid-template-columns: repeat(auto-fill, minmax(180rpx, 1fr));  /* 更大的卡片 */
  }

  .role-avatar {
    width: 112rpx;     /* 增大头像 */
    height: 112rpx;
    border-radius: 56rpx;
  }
}

/* =====================
 * 角色选择相关样式
 *
 * 使用示例：
 * <view class="role-section">
 *   <view class="current-role" bindtap="showRoleSelector">
 *     <image class="role-avatar" src="{{currentRole.avatar}}" />
 *     <view class="role-info">
 *       <text class="role-name">{{currentRole.name}}</text>
 *       <text class="role-type">{{currentRole.type}}</text>
 *     </view>
 *     <view class="role-arrow"></view>
 *   </view>
 * </view>
 * ===================== */
.role-section {
  padding: 20rpx;
  /* 内边距 */
  background: #fff;
  /* 白色背景 */
  margin-bottom: 20rpx;
  /* 底部间距 */
}

/* 当前选中角色展示区 */
.current-role {
  display: flex;
  /* 开启flex布局 */
  align-items: center;
  /* 垂直居中 */
  padding: 20rpx;
  /* 内边距 */
  background: #f8f8f8;
  /* 浅灰色背景 */
  border-radius: 12rpx;
  /* 圆角 */
}

/* 角色头像 */
.role-avatar {
  width: 80rpx;
  /* 头像宽度 */
  height: 80rpx;
  /* 头像高度 */
  border-radius: 50%;
  /* 圆形头像 */
  margin-right: 20rpx;
  /* 右侧间距 */
}

/* 角色信息区域 */
.role-info {
  flex: 1;
  /* 占据剩余空间 */
}

/* 角色名称 */
.role-name {
  font-size: 32rpx;
  /* 文字大小 */
  color: #333;
  /* 文字颜色 */
  font-weight: 500;
  /* 字体粗细 */
}

/* 角色类型 */
.role-type {
  font-size: 24rpx;
  /* 文字大小 */
  color: #666;
  /* 文字颜色 */
  margin-top: 4rpx;
  /* 顶部间距 */
}

/* 箭头指示器 */
.role-arrow {
  width: 16rpx;
  /* 箭头宽度 */
  height: 16rpx;
  /* 箭头高度 */
  border-right: 4rpx solid #999;
  /* 右边框 */
  border-bottom: 4rpx solid #999;
  /* 底部边框 */
  transform: rotate(45deg);
  /* 旋转45度形成箭头 */
}

/* =====================
 * 底部固定输入框和角色信息
 *
 * 说明：这些样式当前被隐藏，但保留以供后续可能的使用
 * ===================== */
.footer-input-area {
  display: none;
