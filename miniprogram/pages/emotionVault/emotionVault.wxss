  /* 底部间距 */
  display: block;
  /* 块级元素 */
}

/* 建议项 */
.suggestion-item {
  display: flex;
  /* 弹性布局 */
  align-items: flex-start;
  /* 顶部对齐 */
  gap: 12rpx;
  /* 元素间距 */
  padding: 12rpx 16rpx;
  /* 内边距 */
  background: var(--md-sys-color-surface-container-high);
  /* MD3 表面容器色 */
  border-radius: 16rpx;
  /* 圆角 */
  margin-bottom: 12rpx;
  /* 底部间距 */
  transition: transform 0.2s;
  /* 变换过渡 */
}

/* 建议图标 */
.suggestion-icon {
  font-size: 32rpx;
  /* 图标大小 */
}

/* 建议文本 */
.suggestion-text {
  font-size: 26rpx;
  /* 文字大小 */
  color: var(--md-sys-color-on-surface);
  /* MD3 文字色 */
  line-height: 1.5;
  /* 行高 */
  flex: 1;
  /* 占据剩余空间 */
}

/* 快捷操作区域 */
.quick-actions {
  display: flex;
  /* 弹性布局 */
  gap: 16rpx;
  /* 按钮间距 */
  padding-top: 16rpx;
  /* 顶部内边距 */
  flex-wrap: wrap;
  /* 允许换行 */
}

/* 情感饥图容器 */
.emotion-pie-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  padding: 10rpx;
  background: var(--md-sys-color-surface-container-low);
  /* MD3 表面容器色 */
  border-radius: 24rpx;
  /* 圆角 */
  box-shadow: var(--md-sys-elevation-1);
  /* MD3 阴影 */
}



/* 操作按钮 */
.action-btn {
  flex: 1;
  /* 平均分配空间 */
  height: 88rpx;
  /* 按钮高度 */
  background: var(--md-sys-color-primary-container);
  /* MD3 主题色容器 */
  color: var(--md-sys-color-on-primary-container);
  /* MD3 文字色 */
  border-radius: 44rpx;
  /* 圆角 */
  border: none;
  /* 移除边框 */
  display: flex;
  /* 弹性布局 */
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  /* 水平居中 */
  gap: 8rpx;
  /* 图标间距 */
  font-size: 28rpx;
  /* 文字大小 */
  transition: all 0.2s cubic-bezier(0.2, 0, 0, 1);
  /* MD3 动画 */
}

/* 按钮图标 */
.action-icon {
  font-size: 36rpx;
  /* 图标大小 */
}

/* 按钮点击态 */
.action-btn:active {
  transform: scale(0.98);
  /* 轻微缩小 */
  background: var(--md-sys-color-primary);
  /* MD3 主题色 */
  color: var(--md-sys-color-on-primary);
  /* MD3 文字色 */
}

/* 暗黑模式适配 */
@media (prefers-color-scheme: dark) {
  .analysis-view {
    background: var(--md-sys-color-surface-dark);
    /* 深色背景 */
  }

  .emotion-trend,
  .emotion-intensity,
  .emotion-suggestions {
    background: var(--md-sys-color-surface-container-low-dark);
    /* 深色容器 */
  }

  .suggestion-item {
    background: var(--md-sys-color-surface-container-high-dark);
    /* 深色容器 */
  }

  .action-btn {
    background: var(--md-sys-color-primary-container-dark);
    /* 深色主题容器 */
    color: var(--md-sys-color-on-primary-container-dark);
    /* 深色文字 */
  }

  .action-btn:active {
    background: var(--md-sys-color-primary-dark);
    /* 深色主题色 */
    color: var(--md-sys-color-on-primary-dark);
    /* 深色文字 */
  }
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .emotion-panel {
    padding: 16rpx;
    /* 减小内边距 */
    gap: 16rpx;
    /* 减小间距 */
  }

  .trend-chart {
    height: 240rpx;
    /* 减小图表高度 */
  }

  .action-btn {
    height: 80rpx;
    /* 减小按钮高度 */
    font-size: 26rpx;
    /* 减小文字大小 */
  }
}

@media screen and (min-width: 768px) {
  .emotion-panel {
    padding: 32rpx;
    /* 增加内边距 */
    gap: 32rpx;
    /* 增加间距 */
  }

  .trend-chart {
    height: 360rpx;
    /* 增加图表高度 */
  }

  .suggestion-item {
    padding: 16rpx 24rpx;
    /* 增加内边距 */
  }
}

