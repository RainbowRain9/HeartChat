  position: absolute;     /* 绝对定位 */
  left: 0;               /* 靠左对齐 */
  top: 50%;              /* 垂直居中 */
  transform: translateY(-50%);  /* 居中偏移 */
  width: 24rpx;          /* 手柄宽度 */
  height: 80rpx;         /* 手柄高度 */
