/* =====================
 * 新的紧凑型角色选择器
 *
 * 使用示例：
 * <view class="role-selector-compact">
 *   <view class="selector-header">
 *     <text class="header-title">选择角色</text>
 *     <button class="theme-btn">
 *       <image src="/images/theme.png" />
 *     </button>
 *   </view>
 *   <scroll-view class="role-scroll-compact" scroll-x>
 *     <view class="role-list">
 *       <!-- 角色列表 -->
 *     </view>
 *   </scroll-view>
 * </view>
 * ===================== */
.role-selector-compact {
  background: rgba(255, 255, 255, 0.95);
  /* 半透明白色背景 */
  backdrop-filter: blur(10px);
  /* 背景模糊效果 */
  padding: 8rpx 0;
  /* 上下内边距 */
  position: relative;
  /* 相对定位 */
  z-index: 100;
  /* 层级 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  /* 阴影效果 */
}

/* 选择器头部 */
.selector-header {
  display: flex;
  /* 开启flex布局 */
  justify-content: space-between;
  /* 两端对齐 */
  align-items: center;
  /* 垂直居中 */
  padding: 0 24rpx 8rpx;
  /* 内边距 */
}

/* 头部标题 */
.header-title {
  font-size: 24rpx;
  /* 文字大小 */
  color: #666;
  /* 文字颜色 */
  font-weight: normal;
  /* 字体粗细 */
}

/* 主题切换按钮 */
.theme-btn {
  width: 48rpx;
  /* 按钮宽度 */
  height: 48rpx;
  /* 按钮高度 */
  padding: 0;
  /* 移除内边距 */
  margin: 0;
  /* 移除外边距 */
  background: transparent;
  /* 透明背景 */
  display: flex;
  /* 开启flex布局 */
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  /* 水平居中 */
}

/* 移除按钮默认边框 */
.theme-btn::after {
  border: none;
}

/* 主题切换按钮图标 */
.theme-btn image {
  width: 36rpx;
  /* 图标宽度 */
  height: 36rpx;
  /* 图标高度 */
  opacity: 0.7;
  /* 透明度 */
}

/* 角色列表横向滚动区域 */
.role-scroll-compact {
  white-space: nowrap;
  /* 禁止换行 */
}

