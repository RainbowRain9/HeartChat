/* Material Design 3 色彩系统 */
page {
  /* 主色 */
  --md-primary: #006495;
  --md-on-primary: #FFFFFF;
  --md-primary-container: #CBE6FF;
  --md-on-primary-container: #001E30;
  
  /* 次要色 */
  --md-secondary: #8A2BE2;
  --md-on-secondary: #FFFFFF;
  --md-secondary-container: #EADDFF;
  --md-on-secondary-container: #21005E;
  
  /* 中性色 */
  --md-surface: #FDFBFF;
  --md-surface-dim: #F8F8F8;
  --md-surface-bright: #FFFFFF;
  --md-surface-container-lowest: #FFFFFF;
  --md-surface-container-low: #F6F8FF;
  --md-surface-container: #F0F4FF;
  --md-surface-container-high: #ECF1FF;
  --md-surface-container-highest: #E6EDFF;
  
  /* 文字颜色 */
  --md-on-surface: #1A1C1E;
  --md-on-surface-variant: #43474E;
  --md-on-surface-dim: #3C4043;
  
  /* 状态颜色 */
  --md-error: #B3261E;
  --md-on-error: #FFFFFF;
  --md-error-container: #F9DEDC;
  --md-on-error-container: #410E0B;
  --md-success: #0F9D58;
  --md-on-success: #FFFFFF;
  
  /* 轮廓颜色 */
  --md-outline: #79747E;
  --md-outline-variant: #C4C7C5;
  
  /* 投影 */
  --md-shadow-1: 0 1px 2px rgba(0,0,0,0.3);
  --md-shadow-2: 0 1px 2px rgba(0,0,0,0.15), 0 2px 6px rgba(0,0,0,0.15);
  --md-shadow-3: 0 4px 8px rgba(0,0,0,0.15), 0 1px 3px rgba(0,0,0,0.3);
  --md-shadow-4: 0 6px 10px rgba(0,0,0,0.15), 0 2px 4px rgba(0,0,0,0.3);
  --md-shadow-5: 0 8px 12px rgba(0,0,0,0.15), 0 4px 6px rgba(0,0,0,0.3);
  
  /* 动画曲线 */
  --md-easing-standard: cubic-bezier(0.2, 0, 0, 1);
  --md-easing-emphasized: cubic-bezier(0.2, 0, 0, 1);
}

/* 基础布局 */
.role-edit {
  min-height: 100vh;
  background: linear-gradient(180deg, 
    var(--md-surface-container-highest) 0%,
    var(--md-surface-container-low) 100%);
  padding-bottom: 280rpx;
  box-sizing: border-box;
  width: 100%;
  overflow-x: hidden;
}

/* 头像上传区域 */
.avatar-section {
  display: flex;
  justify-content: center;
  padding: 48rpx 16rpx;
  position: relative;
}

.avatar-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  overflow: hidden;
  background: var(--md-surface-container);
  box-shadow: var(--md-shadow-2);
  transition: all 0.3s var(--md-easing-emphasized);
}

.avatar-container:active {
  transform: scale(0.96);
  box-shadow: var(--md-shadow-1);
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.8),
    rgba(0, 0, 0, 0.4)
  );
  backdrop-filter: blur(4px);
  padding: 24rpx 0 16rpx;
  text-align: center;
  transform: translateY(100%);
  transition: transform 0.3s var(--md-easing-emphasized);
}

.avatar-container:active .avatar-overlay {
  transform: translateY(0);
}

.upload-text {
  color: var(--md-on-primary);
  font-size: 26rpx;
  font-weight: 500;
  letter-spacing: 0.1px;
}

/* 表单区域 */
.form-section {
  background: var(--md-surface-bright);
  border-radius: 0;
  margin: 24rpx 0;
  box-shadow: var(--md-shadow-2);
  border-top: 1px solid var(--md-outline-variant);
  border-bottom: 1px solid var(--md-outline-variant);
  transition: all 0.3s var(--md-easing-standard);
  width: 100vw;
  box-sizing: border-box;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.form-section .section-title {
  padding: 32rpx 24rpx 16rpx;
  margin: 0;
  border-bottom: 2rpx solid var(--md-outline-variant);
}

.form-section .form-item {
  padding: 0 24rpx;
  margin-bottom: 36rpx;
}

.form-section .preview-section {
  padding: 48rpx 24rpx 24rpx;
  margin-top: 0;
}

.form-section:first-of-type {
  border-radius: 28rpx 28rpx 0 0;
  margin-top: 0;
}

.form-section:last-of-type {
  border-radius: 0 0 28rpx 28rpx;
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--md-on-surface);
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid var(--md-outline-variant);
  letter-spacing: 0.1px;
}

.form-item {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: var(--md-on-surface-variant);
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 0.1px;
}

.label.required::after {
  content: '*';
  color: var(--md-error);
  margin-left: 8rpx;
}

/* 输入框样式 */
.input {
  width: 100%;
  height: 96rpx;
  background: var(--md-surface-container-lowest);
  border: 1px solid var(--md-outline-variant);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--md-on-surface);
  box-sizing: border-box;
  transition: all 0.2s var(--md-easing-standard);
}

.input:focus,
.textarea:focus {
  border-color: var(--md-primary);
  background: var(--md-surface-bright);
  box-shadow: 0 0 0 4rpx rgba(0, 100, 149, 0.1);
}

.input.filled,
.textarea.filled {
  border-color: var(--md-primary);
  background: var(--md-primary-container);
  color: var(--md-on-primary-container);
}

.textarea {
  height: 180rpx;
  padding: 24rpx;
  line-height: 1.6;
  font-size: 30rpx;
  border-radius: 16rpx;
  border: 1px solid var(--md-outline-variant);
  background: var(--md-surface-container-lowest);
  transition: all 0.2s var(--md-easing-standard);
}

/* 单选框组样式 */
.radio-group-container {
  padding: 12rpx 0;
}

.radio-group {
  display: flex;
  gap: 24rpx;
}

.radio-label {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  border-radius: 16rpx;
  background: var(--md-surface-container-lowest);
  border: 1px solid var(--md-outline-variant);
  transition: all 0.2s var(--md-easing-standard);
}

.radio-label.active {
  background: var(--md-primary-container);
  border-color: var(--md-primary);
  color: var(--md-on-primary-container);
}

.radio-label radio {
  margin-right: 12rpx;
  transform: scale(0.9);
}

.radio-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 选择器样式 */
.picker {
  width: 100%;
  height: 96rpx;
  background: var(--md-surface-container-lowest);
  border: 1px solid var(--md-outline-variant);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--md-on-surface);
  transition: all 0.2s var(--md-easing-standard);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker.filled {
  border-color: var(--md-primary);
  background: var(--md-primary-container);
  color: var(--md-on-primary-container);
}

.picker:active {
  background: var(--md-surface-container);
  border-color: var(--md-primary);
}

/* 按钮区域 */
.button-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 16rpx calc(24rpx + env(safe-area-inset-bottom));
  background: var(--md-surface-bright);
  backdrop-filter: blur(20px);
  border-top: 1px solid var(--md-outline-variant);
  z-index: 100;
  box-shadow: var(--md-shadow-4);
}

.submit-btn,
.cancel-btn,
.preview-btn {
  margin: 0 auto;
  width: calc(100% - 32rpx);
  max-width: 686rpx;
}

.submit-btn {
  height: 96rpx;
  background: var(--md-primary);
  color: var(--md-on-primary);
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  box-shadow: var(--md-shadow-2);
  transition: all 0.2s var(--md-easing-emphasized);
  letter-spacing: 0.5px;
  position: relative;
  overflow: hidden;
}

.submit-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    to bottom right,
    rgba(255, 255, 255, 0.1),
    rgba(255, 255, 255, 0)
  );
  opacity: 0;
  transition: opacity 0.2s var(--md-easing-emphasized);
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: var(--md-shadow-1);
}

.submit-btn:active::after {
  opacity: 1;
}

.submit-btn.loading {
  opacity: 0.7;
  pointer-events: none;
}

.cancel-btn {
  height: 96rpx;
  background: var(--md-surface-container);
  color: var(--md-on-surface-variant);
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  border: 1px solid var(--md-outline-variant);
  transition: all 0.2s var(--md-easing-standard);
  letter-spacing: 0.5px;
}

.cancel-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
  background: var(--md-surface-container-high);
}

/* 预览按钮 */
.preview-section {
  margin-top: 48rpx;
}

.preview-btn {
  height: 96rpx;
  background: var(--md-secondary);
  color: var(--md-on-secondary);
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 16rpx;
  box-shadow: var(--md-shadow-2);
  transition: all 0.2s var(--md-easing-emphasized);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  position: relative;
  overflow: hidden;
}

.preview-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(
    to bottom right,
    rgba(255, 255, 255, 0.2),
    rgba(255, 255, 255, 0)
  );
  opacity: 0;
  transition: opacity 0.2s var(--md-easing-emphasized);
}

.preview-btn:active {
  transform: scale(0.98);
  box-shadow: var(--md-shadow-1);
}

.preview-btn:active::after {
  opacity: 1;
}

/* 图标 */
.iconfont {
  font-family: "iconfont";
  font-size: 36rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  opacity: 0.9;
}

/* 状态样式 */
.input.error,
.textarea.error {
  border-color: var(--md-error);
  background: var(--md-error-container);
  color: var(--md-on-error-container);
}

.input.success,
.textarea.success {
  border-color: var(--md-success);
  background: color-mix(in srgb, var(--md-success) 8%, transparent);
  color: var(--md-on-surface);
}