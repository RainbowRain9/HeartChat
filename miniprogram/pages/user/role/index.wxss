/* Material Design 3 Variables */
:root {
  --md-sys-color-primary: #2F80ED;
  --md-sys-color-on-primary: #FFFFFF;
  --md-sys-color-primary-container: #E3F2FD;
  --md-sys-color-on-primary-container: #1565C0;
  --md-sys-color-surface: #FFFFFF;
  --md-sys-color-on-surface: #1C1B1F;
  --md-sys-color-surface-variant: #F8F8F8;
  --md-elevation-1: 0 1px 2px rgba(0,0,0,0.3);
  --md-elevation-2: 0 2px 4px rgba(0,0,0,0.3);
  --md-sys-typescale-headline-large: 40rpx;
  --md-sys-typescale-title-medium: 32rpx;
  --md-sys-typescale-body-medium: 28rpx;
}

.roles-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #F6F8FF 0%, #FFFFFF 100%);
  padding: 32rpx 24rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 8rpx;
  position: relative;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1A1A1A;
  letter-spacing: -0.5px;
  position: relative;
  padding-bottom: 8rpx;
}

.title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 48rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #2196F3 0%, #9C27B0 100%);
  border-radius: 3rpx;
}

.create-btn {
  background: linear-gradient(135deg, #2196F3 0%, #1976D2 100%);
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 40rpx;
  border-radius: 100rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.create-btn::before {
  content: '+';
  font-size: 32rpx;
  font-weight: 400;
}

.create-btn:active {
  transform: scale(0.96) translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(33, 150, 243, 0.2);
}

.role-section {
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 28rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  letter-spacing: -0.25px;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 24rpx;
  background: #2196F3;
  border-radius: 2rpx;
}

.work .section-title::before {
  background: #2196F3;
}

.life .section-title::before {
  background: #9C27B0;
}

.role-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 32rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-radius: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.9;
}

.empty-text {
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  line-height: 1.6;
  letter-spacing: 0.25px;
} 