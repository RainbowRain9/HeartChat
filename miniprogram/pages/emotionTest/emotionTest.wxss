/* pages/emotionTest/emotionTest.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f8f8;
  transition: all 0.3s ease;
}

/* 暗色主题 */
.container.dark {
  background-color: #222;
  color: #eee;
}

/* 页面头部 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

/* 页面标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.container.dark .title {
  color: #fff;
}

/* 主题切换按钮 */
.theme-toggle {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 50%;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.container.dark .theme-toggle {
  background-color: #444;
  box-shadow: 0 2rpx 5rpx rgba(255, 255, 255, 0.1);
}

/* 主题切换图标 */
.toggle-icon {
  font-size: 32rpx;
}

/* 当前角色 */
.current-role {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.container.dark .current-role {
  background-color: #333;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 角色标签 */
.role-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.container.dark .role-label {
  color: #bbb;
}

/* 角色名称 */
.role-name {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.container.dark .role-name {
  color: #fff;
}

/* 输入区域 */
.input-area {
  position: relative;
  margin-bottom: 30rpx;
}

/* 文本输入框 */
.text-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.container.dark .text-input {
  background-color: #333;
  color: #eee;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 字符计数 */
.char-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.container.dark .char-count {
  color: #aaa;
}

/* 按钮区域 */
.button-area {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

/* 分析按钮 */
.analyze-btn {
  flex: 1;
  margin-right: 20rpx;
  background-color: #2196f3;
  color: white;
  font-size: 30rpx;
  border-radius: 10rpx;
}

.analyze-btn[disabled] {
  background-color: #b0bec5;
  color: #f5f5f5;
}

/* 历史记录按钮 */
.history-btn {
  width: 200rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 30rpx;
  border-radius: 10rpx;
}

.container.dark .history-btn {
  background-color: #444;
  color: #ddd;
}
