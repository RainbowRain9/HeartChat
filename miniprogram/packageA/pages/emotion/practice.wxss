/* packageA/pages/emotion/practice.wxss */

/* 容器 */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 练习列表 */
.practice-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.practice-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s, box-shadow 0.3s;
}

.practice-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}

.practice-item.completed {
  background: #f8f9fa;
}

.item-content {
  flex: 1;
  margin-right: 30rpx;
}

.item-content .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #343a40;
  margin-bottom: 10rpx;
}

.item-content .desc {
  font-size: 28rpx;
  color: #6c757d;
  margin-bottom: 20rpx;
  line-height: 1.6;
}

.item-content .meta {
  display: flex;
  gap: 30rpx;
}

.meta .duration,
.meta .difficulty {
  font-size: 24rpx;
  color: #868e96;
  display: flex;
  align-items: center;
}

.item-status {
  width: 48rpx;
  height: 48rpx;
}

.status-icon {
  width: 100%;
  height: 100%;
  border: 4rpx solid #dee2e6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.status-icon.completed {
  border-color: #28a745;
  background: #28a745;
}

.status-icon .check {
  width: 24rpx;
  height: 12rpx;
  border: 4rpx solid #fff;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
  opacity: 0;
  transition: opacity 0.3s;
}

.status-icon.completed .check {
  opacity: 1;
}

/* 练习详情弹窗 */
.practice-detail {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.practice-detail.show {
  opacity: 1;
  visibility: visible;
}

.detail-content {
  width: 90%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  transform: scale(0.9);
  opacity: 0;
  transition: all 0.3s;
}

.practice-detail.show .detail-content {
  transform: scale(1);
  opacity: 1;
}

.detail-header {
  padding: 30rpx;
  border-bottom: 2rpx solid #e9ecef;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.detail-header .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #343a40;
}

.detail-header .close {
  font-size: 48rpx;
  color: #adb5bd;
  line-height: 1;
  padding: 10rpx;
  margin: -10rpx;
}

.detail-body {
  max-height: 60vh;
  padding: 30rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  margin-bottom: 20rpx;
}

.section-content {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.steps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
}

.step-num {
  width: 40rpx;
  height: 40rpx;
  background: #e9ecef;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #495057;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
  flex: 1;
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tip-item {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.detail-footer {
  padding: 30rpx;
  border-top: 2rpx solid #e9ecef;
}

.complete-btn {
  width: 100% !important;
  background: #007bff;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  transition: opacity 0.3s;
}

.complete-btn.disabled {
  background: #28a745;
  opacity: 0.7;
}

/* 加载动画 */
.loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.loading-dots {
  display: flex;
  align-items: center;
}

.dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #007bff;
  margin: 0 8rpx;
  animation: bounce 0.5s infinite alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes bounce {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(-20rpx);
  }
}

/* 空状态 */
.empty {
  padding: 60rpx 0;
  text-align: center;
  color: #868e96;
  font-size: 28rpx;
}