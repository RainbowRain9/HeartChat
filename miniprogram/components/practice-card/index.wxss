.practice-card {
  position: relative;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
  overflow: hidden;
}

/* 练习类型图标 */
.practice-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.practice-icon image {
  width: 60rpx;
  height: 60rpx;
}

/* 练习信息 */
.practice-info {
  flex: 1;
  min-width: 0;
}

.practice-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.practice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-color, #333);
}

.practice-duration {
  font-size: 24rpx;
  color: var(--text-color-secondary, #999);
  padding: 4rpx 12rpx;
  background-color: var(--bg-color, #f5f5f5);
  border-radius: 20rpx;
}

.practice-description {
  font-size: 26rpx;
  color: var(--text-color-secondary, #999);
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 进度条 */
.progress-bar {
  height: 6rpx;
  background-color: var(--bg-color, #f5f5f5);
  border-radius: 3rpx;
  margin: 20rpx 0;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  border-radius: 3rpx;
  transition: width 0.3s ease;
}

/* 上次练习时间 */
.last-practice {
  font-size: 24rpx;
  color: var(--text-color-secondary, #999);
}

/* 操作按钮 */
.practice-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-button {
  flex: 1;
  height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  margin: 0;
  border: none;
}

.action-button::after {
  display: none;
}

.action-button.start,
.action-button.continue {
  color: #fff;
}

.action-button.details {
  background-color: var(--bg-color, #f5f5f5);
  color: var(--text-color, #333);
}

/* 完成标记 */
.completed-mark {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.completed-mark image {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.8;
}

/* 动画效果 */
@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.practice-card:active {
  animation: pulse 0.3s ease;
}