<view class="practice-card">
  <!-- 练习类型图标 -->
  <view 
    class="practice-icon" 
    style="background-color: {{typeColors[practice.type]}}">
    <image src="{{typeIcons[practice.type]}}" />
  </view>

  <!-- 练习信息 -->
  <view class="practice-info">
    <view class="practice-header">
      <text class="practice-title">{{practice.title}}</text>
      <text class="practice-duration">{{practice.duration}}分钟</text>
    </view>
    <text class="practice-description">{{practice.description}}</text>
    
    <!-- 进度条 -->
    <view class="progress-bar" wx:if="{{practice.progress > 0}}">
      <view 
        class="progress-inner" 
        style="width: {{formatProgress(practice.progress)}}; background-color: {{typeColors[practice.type]}}">
      </view>
    </view>

    <!-- 上次练习时间 -->
    <text class="last-practice" wx:if="{{practice.lastPracticeTime}}">
      上次练习: {{formatTime(practice.lastPracticeTime)}}
    </text>
  </view>

  <!-- 操作按钮 -->
  <view class="practice-actions">
    <block wx:if="{{practice.progress > 0 && !practice.completed}}">
      <button 
        class="action-button continue" 
        style="background-color: {{typeColors[practice.type]}}"
        bindtap="continuePractice">
        继续
      </button>
    </block>
    <block wx:else>
      <button 
        class="action-button start" 
        style="background-color: {{typeColors[practice.type]}}"
        bindtap="startPractice">
        开始
      </button>
    </block>
    <button 
      class="action-button details"
      bindtap="viewDetails">
      详情
    </button>
  </view>

  <!-- 完成标记 -->
  <view class="completed-mark" wx:if="{{practice.completed}}">
    <image src="/images/practice/completed.svg" />
  </view>
</view>