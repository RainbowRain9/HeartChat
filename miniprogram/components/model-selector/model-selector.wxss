/* components/model-selector/model-selector.wxss */
.model-selector {
  position: relative;
  width: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 当前选择的模型 */
.selected-model {
  display: flex;
  align-items: center;
  padding: 6rpx 10rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  max-width: 160rpx;
}

.dark .selected-model {
  background-color: #333;
  color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
}

.model-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}

.model-name {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  font-weight: 500;
  max-width: 100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.model-subname {
  font-size: 20rpx;
  color: #666;
  margin-top: 2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dark .model-subname {
  color: #aaa;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  transition: transform 0.3s ease;
}

.selected-model:active {
  opacity: 0.8;
}

.icon {
  width: 100%;
  height: 100%;
}

/* 模型选择弹窗 */
.model-selector-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.model-selector-popup.show {
  opacity: 1;
  visibility: visible;
}

.model-selector-content {
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.dark .model-selector-content {
  background-color: #222;
  color: #fff;
}

.model-selector-popup.show .model-selector-content {
  transform: scale(1);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
}

.dark .popup-header {
  border-bottom-color: #333;
}

.popup-title {
  font-size: 32rpx;
  font-weight: 600;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  cursor: pointer;
}

.model-list {
  max-height: 60vh;
  overflow-y: auto;
}

.model-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.dark .model-item {
  border-bottom-color: #333;
}

.model-item:last-child {
  border-bottom: none;
}

.model-item:active {
  background-color: #f5f5f5;
}

.dark .model-item:active {
  background-color: #333;
}

.model-item.selected {
  background-color: #f0f7ff;
}

.dark .model-item.selected {
  background-color: #1a3a5f;
}

.model-item-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.model-item-info {
  flex: 1;
}

.model-item-name {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.model-item-desc {
  font-size: 24rpx;
  color: #666;
}

.dark .model-item-desc {
  color: #aaa;
}

.model-item-features {
  display: flex;
  flex-wrap: wrap;
  margin-top: 12rpx;
  width: 100%;
  padding-left: 80rpx;
}

.feature-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background-color: #f0f0f0;
  color: #666;
  border-radius: 6rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.dark .feature-tag {
  background-color: #444;
  color: #ccc;
}

.model-item-check {
  width: 40rpx;
  height: 40rpx;
}

/* 加载中遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1001;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 加载中遮罩 - 新版 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1001;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

.loading-overlay.show {
  opacity: 1;
  visibility: visible;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #fff;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.model-selector-trigger {
  display: flex;
  align-items: center;
  padding: 10rpx 15rpx;
  /* border: 1px solid #ccc; */ /* 移除边框，使其更像一个图标按钮 */
  border-radius: 8rpx;
  cursor: pointer;
  transition: background-color 0.3s;
  background-color: transparent; /* 默认透明背景 */
}

.model-selector-trigger.dark-mode {
  /* border-color: #555; */ /* 暗黑模式下边框颜色 */
  background-color: transparent; /* 暗黑模式下透明背景 */
}

.current-model-icon {
  width: 40rpx; /* 调整图标大小与情感分析图标接近 */
  height: 40rpx;
  margin-right: 10rpx;
}

.model-selector-trigger.dark-mode .current-model-icon {
 filter: invert(100%); /* 暗黑模式下图标反色 */
}

.current-model-name {
  font-size: 24rpx;
  color: #333;
  /* display: none; */ /* 可以考虑默认不显示文字，只显示图标，以节省空间 */
}

.model-selector-trigger.dark-mode .current-model-name {
  color: #ddd;
}

.dropdown-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  transition: transform 0.3s;
}

.model-selector-trigger.dark-mode .dropdown-arrow {
 filter: invert(100%);
}

.dropdown-arrow.open {
  transform: rotate(180deg);
}

.model-options-popup {
  position: fixed; /* 使用fixed定位使其悬浮 */
  top: calc(var(--status-bar-height, 0px) + 88rpx + 10rpx); /* 根据导航栏高度调整，增加一点间距 */
  right: 20rpx; /* 调整弹出位置，使其在选择器下方偏右 */
  width: auto; /* 宽度自适应内容 */
  min-width: 300rpx; /* 最小宽度 */
  max-width: 500rpx; /* 最大宽度 */
  max-height: 60vh; /* 最大高度，超出可滚动 */
  overflow-y: auto;
  background-color: #fff;
  border: 1px solid #eee;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1010; /* 比导航栏高 */
  padding: 10rpx 0;
}

.model-options-popup.dark-mode {
  background-color: #2C2C2C; /* 暗黑模式背景 */
  border-color: #444;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.provider-group {
  margin-bottom: 10rpx;
}

.provider-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #555;
  padding: 15rpx 25rpx;
  border-bottom: 1px solid #f0f0f0;
}

.model-options-popup.dark-mode .provider-name {
  color: #bbb;
  border-bottom-color: #3a3a3a;
}

.model-option {
  padding: 20rpx 25rpx;
  font-size: 26rpx;
  color: #333;
  cursor: pointer;
  transition: background-color 0.2s;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.model-option.selected {
  background-color: #e6f7ff;
  color: #1890ff;
  font-weight: bold;
}

.model-options-popup.dark-mode .model-option {
  color: #ddd;
}

.model-options-popup.dark-mode .model-option:hover {
  background-color: #3a3a3a;
}

.model-options-popup.dark-mode .model-option.selected {
  background-color: #003769;
  color: #75bfff;
}

.model-option:hover {
  background-color: #f0f0f0;
}

.checkmark-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 15rpx;
}

/* 遮罩层 */
.model-selector-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3); /* 半透明黑色 */
  z-index: 1005; /* 低于弹窗，高于页面其他内容 */
}

.model-selector-overlay.dark-mode {
  background-color: rgba(0, 0, 0, 0.6); /* 暗黑模式下更暗的遮罩 */
}
