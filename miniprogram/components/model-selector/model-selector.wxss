/* components/model-selector/model-selector.wxss */
.model-selector {
  position: relative;
  width: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 当前选择的模型 */
.selected-model {
  display: flex;
  align-items: center;
  padding: 10rpx 16rpx; /* 修改内边距，减少左右内边距 */
  background-color: #f8f8f8;
  border-radius: 20rpx;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.06);
  max-width: 200rpx; /* 增加最大宽度，使内容更容易显示 */
  border: 1px solid rgba(0, 0, 0, 0.05);
  margin: 0; /* 移除可能的外边距 */
}

.dark .selected-model {
  background-color: #2a2a2a;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.model-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0; /* 防止图标被压缩 */
}

.model-icon-bg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  color: white;
  font-size: 24rpx;
  text-transform: uppercase;
  overflow: hidden; /* 确保内容不溢出 */
  min-width: 44rpx; /* 确保最小宽度 */
  min-height: 44rpx; /* 确保最小高度 */
}

/* 为每个模型平台设置独特的颜色 */
.model-icon-bg.zhipu {
  background: linear-gradient(135deg, #3498db, #2980b9);
}

.model-icon-bg.gemini {
  background: linear-gradient(135deg, #9b59b6, #8e44ad);
}

.model-icon-bg.openai {
  background: linear-gradient(135deg, #2ecc71, #27ae60);
}

.model-icon-bg.crond {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
}

.model-icon-bg.closeai {
  background: linear-gradient(135deg, #f39c12, #d35400);
}

.model-icon-bg.grok {
  background: linear-gradient(135deg, #1abc9c, #16a085);
}

.model-icon-bg.claude {
  background: linear-gradient(135deg, #34495e, #2c3e50);
}

.model-icon-text {
  font-size: 22rpx;
  font-weight: bold;
}

.model-name {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
  font-weight: 500;
  min-width: 0; /* 确保flex子项可以收缩 */
  max-width: 120rpx; /* 增加最大宽度，使内容更容易显示 */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  line-height: 1.2; /* 减小行高，使整体更紧凑 */
}

.model-subname {
  font-size: 18rpx;
  color: #666;
  margin-top: 2rpx; /* 减少上边距 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2; /* 减小行高 */
}

.dark .model-subname {
  color: #aaa;
}

.arrow-icon {
  width: 20rpx;
  height: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 2rpx;
}

.arrow-down {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-top: 8rpx solid #666;
}

.dark .arrow-down {
  border-top-color: #aaa;
}

.selected-model:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 模型选择弹窗 */
.model-selector-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

.model-selector-popup.show {
  opacity: 1;
  visibility: visible;
}

.model-selector-content {
  width: 85%;
  max-width: 650rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  transform: scale(0.95) translateY(20rpx);
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.dark .model-selector-content {
  background-color: #1c1c1e;
  color: #fff;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.3);
}

.model-selector-popup.show .model-selector-content {
  transform: scale(1) translateY(0);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.dark .popup-header {
  border-bottom-color: #333;
}

.popup-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.dark .popup-title {
  color: #fff;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #f5f5f5;
  transition: background-color 0.2s;
}

.dark .close-btn {
  background-color: #333;
}

.close-btn:active {
  background-color: #e0e0e0;
}

.dark .close-btn:active {
  background-color: #444;
}

.close-icon {
  position: relative;
  width: 24rpx;
  height: 24rpx;
}

.close-icon:before, .close-icon:after {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 2rpx;
  background-color: #666;
  top: 50%;
  left: 0;
}

.dark .close-icon:before, .dark .close-icon:after {
  background-color: #aaa;
}

.close-icon:before {
  transform: rotate(45deg);
}

.close-icon:after {
  transform: rotate(-45deg);
}

.model-list {
  flex: 1;
  overflow-y: auto;
  padding: 16rpx 0;
}

.model-item {
  display: flex;
  align-items: flex-start;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
  transition: all 0.2s ease;
  position: relative;
}

.dark .model-item {
  border-bottom-color: #2a2a2a;
}

.model-item:last-child {
  border-bottom: none;
}

.model-item:active {
  background-color: #f8f8f8;
}

.dark .model-item:active {
  background-color: #2a2a2a;
}

.model-item.selected {
  background-color: #f0f7ff;
}

.dark .model-item.selected {
  background-color: #1a3a5f;
}

.model-item-icon {
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.model-icon-bg {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: bold;
  font-size: 32rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.model-item:hover .model-icon-bg {
  transform: scale(1.05);
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.15);
}

.model-icon-bg.zhipu {
  background: linear-gradient(135deg, #1890ff, #0050b3);
}

.model-icon-bg.gemini {
  background: linear-gradient(135deg, #8e44ad, #5b2c6f);
}

.model-icon-bg.openai {
  background: linear-gradient(135deg, #2ecc71, #27ae60);
}

.model-icon-bg.crond {
  background: linear-gradient(135deg, #e74c3c, #c0392b);
}

.model-icon-bg.closeai {
  background: linear-gradient(135deg, #f39c12, #d35400);
}

.model-icon-bg.grok {
  background: linear-gradient(135deg, #3498db, #2980b9);
}

.model-icon-bg.claude {
  background: linear-gradient(135deg, #34495e, #2c3e50);
}

.model-item-info {
  flex: 1;
  min-width: 0;
}

.model-item-name {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333;
}

.dark .model-item-name {
  color: #fff;
}

.model-item-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2; /* 标准属性，增加兼容性 */
  -webkit-box-orient: vertical;
  max-width: 100%;
  padding-right: 20rpx;
}

.dark .model-item-desc {
  color: #aaa;
}

/* API密钥状态指示器 */
.api-key-status {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  margin-top: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}

.api-key-status.valid .status-dot {
  background-color: #2ecc71;
}

.api-key-status.invalid .status-dot {
  background-color: #e74c3c;
}

.status-text {
  color: #888;
}

.dark .status-text {
  color: #999;
}



.model-item-check {
  position: absolute;
  top: 28rpx;
  right: 32rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  width: 24rpx;
  height: 16rpx;
  border-bottom: 3rpx solid #1890ff;
  border-left: 3rpx solid #1890ff;
  transform: rotate(-45deg);
}

/* 加载中遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1001;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

.loading-overlay.show {
  opacity: 1;
  visibility: visible;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s cubic-bezier(0.5, 0.1, 0.5, 0.9) infinite;
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.1);
}

.loading-text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.model-selector-trigger {
  display: flex;
  align-items: center;
  padding: 10rpx 15rpx;
  /* border: 1px solid #ccc; */ /* 移除边框，使其更像一个图标按钮 */
  border-radius: 8rpx;
  cursor: pointer;
  transition: background-color 0.3s;
  background-color: transparent; /* 默认透明背景 */
}

.model-selector-trigger.dark-mode {
  /* border-color: #555; */ /* 暗黑模式下边框颜色 */
  background-color: transparent; /* 暗黑模式下透明背景 */
}

.current-model-icon {
  width: 40rpx; /* 调整图标大小与情感分析图标接近 */
  height: 40rpx;
  margin-right: 10rpx;
}

.model-selector-trigger.dark-mode .current-model-icon {
 filter: invert(100%); /* 暗黑模式下图标反色 */
}

.current-model-name {
  font-size: 24rpx;
  color: #333;
  /* display: none; */ /* 可以考虑默认不显示文字，只显示图标，以节省空间 */
}

.model-selector-trigger.dark-mode .current-model-name {
  color: #ddd;
}

.dropdown-arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  transition: transform 0.3s;
}

.model-selector-trigger.dark-mode .dropdown-arrow {
 filter: invert(100%);
}

.dropdown-arrow.open {
  transform: rotate(180deg);
}

.model-options-popup {
  position: fixed; /* 使用fixed定位使其悬浮 */
  top: calc(var(--status-bar-height, 0px) + 88rpx + 10rpx); /* 根据导航栏高度调整，增加一点间距 */
  right: 20rpx; /* 调整弹出位置，使其在选择器下方偏右 */
  width: auto; /* 宽度自适应内容 */
  min-width: 300rpx; /* 最小宽度 */
  max-width: 500rpx; /* 最大宽度 */
  max-height: 60vh; /* 最大高度，超出可滚动 */
  overflow-y: auto;
  background-color: #fff;
  border: 1px solid #eee;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  z-index: 1010; /* 比导航栏高 */
  padding: 10rpx 0;
}

.model-options-popup.dark-mode {
  background-color: #2C2C2C; /* 暗黑模式背景 */
  border-color: #444;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.provider-group {
  margin-bottom: 10rpx;
}

.provider-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #555;
  padding: 15rpx 25rpx;
  border-bottom: 1px solid #f0f0f0;
}

.model-options-popup.dark-mode .provider-name {
  color: #bbb;
  border-bottom-color: #3a3a3a;
}

.model-option {
  padding: 20rpx 25rpx;
  font-size: 26rpx;
  color: #333;
  cursor: pointer;
  transition: background-color 0.2s;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.model-option.selected {
  background-color: #e6f7ff;
  color: #1890ff;
  font-weight: bold;
}

.model-options-popup.dark-mode .model-option {
  color: #ddd;
}

.model-options-popup.dark-mode .model-option:hover {
  background-color: #3a3a3a;
}

.model-options-popup.dark-mode .model-option.selected {
  background-color: #003769;
  color: #75bfff;
}

.model-option:hover {
  background-color: #f0f0f0;
}

.checkmark-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 15rpx;
}

/* 遮罩层 */
.model-selector-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3); /* 半透明黑色 */
  z-index: 1005; /* 低于弹窗，高于页面其他内容 */
}

.model-selector-overlay.dark-mode {
  background-color: rgba(0, 0, 0, 0.6); /* 暗黑模式下更暗的遮罩 */
}
