/* 内容区域样式 */
.content {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
  box-sizing: border-box;
  width: 100%;
}

.dashboard-wrapper {
  position: relative;
}

/* 导出和分享按钮样式 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  padding: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  background-color: #ffffff;
  color: #333333;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: none;
  width: 45%;
}

.dark-mode .action-btn {
  background-color: #333333;
  color: #f0f0f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

