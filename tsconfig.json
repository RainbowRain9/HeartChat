{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["miniprogram/*"],
      "@components/*": ["miniprogram/components/*"],
      "@pages/*": ["miniprogram/pages/*"],
      "@utils/*": ["miniprogram/utils/*"],
      "@models/*": ["miniprogram/models/*"],
      "@services/*": ["miniprogram/services/*"],
      "@images/*": ["miniprogram/images/*"],
      "@typings/*": ["typings/*"],
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "types": [
      "miniprogram-api-typings",
      "jest"
    ],
    "lib": [
      "ES2017",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "miniprogram/**/*",
    "typings/**/*",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "miniprogram_dist",
    "dist",
    "**/*.spec.ts"
  ]
}